// Clear everything
removelist Tomes
createlist Tomes
clearsysmsg

// Skinning
pushlist Tomes '0x400D5230'
// Ore
pushlist Tomes '0x47F6774A'
// Lumber
pushlist Tomes '0x47F67484'
// TMap
pushlist Tomes '0x40C31DC8'
// Fishing
pushlist Tomes '0x40048ED1'

removelist Buttons
createlist Buttons

//Set Buttons
pushlist Buttons '10'
pushlist Buttons '11'
pushlist Buttons '12'
pushlist Buttons '13'
pushlist Buttons '14'
pushlist Buttons '15'
pushlist Buttons '16'
pushlist Buttons '17'
pushlist Buttons '18'

foreach tome in Tomes
    dclick tome
    waitforgump 'any'
    foreach button in Buttons
        if insysmsg 'The world will save'
            overhead 'Pausing for Worldsave' 55
            pause 25000
            overhead 'Done' 55
        endif
        gumpresponse button
        wait 400
        while findtype 5356 backpack
            if findtype 5356 backpack
                gumpclose
                if not findtype 5365 backpack
                    overhead 'No spyglass in backpack. Stopping...' 33
                    stop
                else
                    dclicktype 5365 backpack
                    waitfortarget
                    targettype 5356 backpack
                    waitforgump 'any'
                    while not insysmsg 'reached the maximum'
                        gumpresponse  4
                        wait 1500
                    endwhile
                    gumpclose
                endif
                lifttype 5356 backpack
                drop tome 0 0 0
                wait 400
            endif
            dclick tome
            waitforgump 'any'
            gumpresponse button
            wait 1000
            gumpclose
        endwhile
        dclick tome
        waitforgump 'any'
    endfor
    gumpclose
endfor
